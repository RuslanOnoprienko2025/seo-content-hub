---
const { content } = Astro.props;
import Layout from './Layout.astro';
---
<Layout title={content.seo_title || content.title} description={content.description} image={content.image}>
    <article>
        <div style="text-transform: uppercase; letter-spacing: 0.1em; font-size: 0.75rem; font-weight: 700; color: var(--accent); margin-bottom: 1rem;">
            Step-by-Step Guide
        </div>
        <h1>{content.title}</h1>

        {content.image && content.show_image && <img src={content.image} alt={content.title} />}

        <section class="guide-content">
            <slot /> </section>
    </article>
</Layout>

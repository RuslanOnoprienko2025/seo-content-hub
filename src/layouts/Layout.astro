---
const { title, description, project, image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.url.origin);
const ogImage = image ? new URL(image, Astro.url.origin) : null;
const isSignature = project && project.includes('Signatures');
const siteName = isSignature ? 'Email Signatures Generator' : 'Fast Image Convert';
const favicon = isSignature ? '/favicon-signatures.svg' : '/favicon-converters.svg';
---
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href={favicon} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <style is:global>
        :root {
            --bg: #ffffff; --text: #1a1a1a; --accent: #0070f3; --border: #eeeeee;
        }
        body {
            font-family: -apple-system, system-ui, sans-serif;
            margin: 0; padding: 0; color: var(--text); background: var(--bg);
        }
        /* Увеличили ширину до 1000px для статей */
        .container {
            max-width: 1000px; 
            margin: 0 auto;
            padding: 40px 20px;
        }
        h1 { font-size: 2.5rem; font-weight: 800; line-height: 1.1; margin-bottom: 1.5rem; }
        p { margin-bottom: 1.5rem; font-size: 1.125rem; line-height: 1.6; }
        img { max-width: 100%; border-radius: 12px; }
        
        /* Стили для контента из админки (Markdown) */
        .prose h2 { font-size: 1.8rem; font-weight: 700; margin-top: 2.5rem; }
        .prose ul { padding-left: 1.5rem; margin-bottom: 1.5rem; }
    </style>
</head>
<body>
    <main class="container">
        <slot />
    </main>
</body>
</html>

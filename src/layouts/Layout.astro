---
const { title, description, project, image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.url.origin);
const ogImage = image ? new URL(image, Astro.url.origin) : null;
const isSignature = project && project.includes('Signatures');
const siteName = isSignature ? 'Email Signatures Generator' : 'Fast Image Convert';
const favicon = isSignature ? '/favicon-signatures.svg' : '/favicon-converters.svg';
---
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href={favicon} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&display=swap" rel="stylesheet">

    <style is:global>
        :root {
            --bg: #ffffff;
            --text: #111827; /* Глубокий графитовый вместо чисто черного */
            --accent: #0070f3;
            --accent-soft: rgba(0, 112, 243, 0.1);
            --border: #e5e7eb;
            --muted: #6b7280;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            margin: 0;
            padding: 0;
            color: var(--text);
            background: var(--bg);
            -webkit-font-smoothing: antialiased; /* Делает шрифт более четким */
            line-height: 1.7; /* Больше воздуха для легкого чтения */
        }

        .container {
            max-width: 1000px; /* Сохраняем широкую верстку */
            margin: 0 auto;
            padding: 60px 24px;
        }

        /* Стиль основного заголовка статьи */
        h1 { 
            font-size: 3.2rem; 
            font-weight: 800; 
            line-height: 1.1; 
            margin-bottom: 2rem;
            letter-spacing: -0.04em; /* Плотный "дизайнерский" заголовок */
            color: #000;
        }

        /* Улучшаем внешний вид Markdown контента */
        .prose {
            color: var(--text);
            font-size: 1.15rem;
        }

        .prose h2 {
            font-size: 1.85rem;
            font-weight: 700;
            margin-top: 3rem;
            margin-bottom: 1.25rem;
            letter-spacing: -0.02em;
        }

        /* Стильные ссылки с мягким фоном при наведении */
        .prose a {
            color: var(--accent);
            text-decoration: none;
            border-bottom: 2px solid var(--accent-soft);
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .prose a:hover {
            background-color: var(--accent-soft);
            border-bottom-color: var(--accent);
        }

        .prose p {
            margin-bottom: 1.8rem;
        }

        .prose ul, .prose ol {
            margin-bottom: 1.8rem;
            padding-left: 1.5rem;
        }

        .prose li {
            margin-bottom: 0.6rem;
        }

        img {
            max-width: 100%;
            border-radius: 16px; /* Более мягкие углы у картинок */
            box-shadow: 0 4px 20px rgba(0,0,0,0.05); /* Легкая тень для объема */
            margin: 2rem 0;
        }

        /* Адаптивность для мобилок */
        @media (max-width: 768px) {
            h1 { font-size: 2.2rem; }
            .container { padding: 40px 20px; }
        }
    </style>
</head>
<body>
    <main class="container">
        <slot />
    </main>
</body>
</html>

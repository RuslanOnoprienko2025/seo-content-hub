---
const { title, description, project, image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.url.origin);
const favicon = project && project.includes('Signatures') ? '/favicon-signatures.svg' : '/favicon-converters.svg';
---
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href={favicon} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style is:global>
        :root {
            --text-main: #1a1a1b;
            --text-muted: #4b5563;
            --link-color: #0070f3;
            --code-bg: #f6f8fa;
            --code-border: #e1e4e8;
        }

        body {
            font-family: 'Inter', -apple-system, system-ui, sans-serif;
            margin: 0;
            padding: 0;
            color: var(--text-main);
            background-color: #ffffff;
            line-height: 1.65;
            -webkit-font-smoothing: antialiased;
        }

        .container {
            max-width: 850px; /* Оптимальная ширина для чтения лонгридов */
            margin: 0 auto;
            padding: 60px 24px;
        }

        /* Заголовки */
        h1 { 
            font-size: 2.8rem; 
            font-weight: 700; 
            line-height: 1.2; 
            margin-bottom: 2rem;
            letter-spacing: -0.02em;
            color: #000;
        }

        .prose h2 {
            font-size: 1.75rem;
            font-weight: 600;
            margin-top: 3rem;
            margin-bottom: 1.25rem;
            color: #111;
        }

        /* Текст */
        .prose p {
            margin-bottom: 1.5rem;
            font-size: 1.1rem;
        }

        /* Ссылки */
        .prose a {
            color: var(--link-color);
            text-decoration: underline;
            text-underline-offset: 3px;
            transition: opacity 0.2s;
        }

        .prose a:hover {
            opacity: 0.8;
        }

        /* КАРТИНКИ: убираем черноту и тени */
        img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 2.5rem auto;
            border: 1px solid #f0f0f0;
            border-radius: 8px;
        }

        /* КОДОВЫЕ ПЛАШКИ: теперь светлые и аккуратные */
        pre {
            background-color: var(--code-bg) !important;
            border: 1px solid var(--code-border);
            border-radius: 8px;
            padding: 20px;
            overflow-x: auto;
            margin: 2rem 0;
        }

        code {
            font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace;
            font-size: 0.95rem;
            color: #24292e !important; /* Темный текст на светлом фоне */
        }

        /* Код внутри строки текста */
        :not(pre) > code {
            background-color: #f3f4f6;
            padding: 3px 6px;
            border-radius: 4px;
            font-size: 0.9em;
            color: #eb5757 !important; /* Немного выделяем цветом */
        }

        /* Адаптивность */
        @media (max-width: 640px) {
            h1 { font-size: 2.1rem; }
            .container { padding: 40px 16px; }
        }
    </style>
</head>
<body>
    <main class="container">
        <article class="prose">
            <slot />
        </article>
    </main>
</body>
</html>
